<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="5dp"
    android:id="@+id/add_room_facility_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


<android.support.constraint.ConstraintLayout
    android:id="@+id/add_room_facility_content"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/white"
    android:layout_marginTop="40dp"
    android:animateLayoutChanges="true"
    android:elevation="5dp"
    android:outlineProvider="bounds"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_study_room_facilitiesText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="49dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/cbWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/cbPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power"
        app:layout_constraintLeft_toRightOf="@+id/cbWifi"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/cbGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group spaces"
        app:layout_constraintLeft_toRightOf="@+id/cbCoffee"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/cbPower" />

    <CheckBox
        android:id="@+id/cbCoffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/cbWifi"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btFacilitiesNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="287dp"
        android:text="@string/add_study_room_buttonNext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <CheckBox
        android:id="@+id/cbToilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Toilet"
        app:layout_constraintTop_toBottomOf="@+id/cbCoffee"
        android:layout_marginLeft="226dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/cbFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/cbCoffee" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>