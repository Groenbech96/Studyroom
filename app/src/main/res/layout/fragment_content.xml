<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:background="@drawable/cast_expanded_controller_bg_gradient_light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/OmrådeNavn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorBottomNavigationNotification"
            android:fontFamily="sans-serif-smallcaps"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Gruppeområde"
            android:textAlignment="center"
            android:textColor="@color/cast_expanded_controller_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/WIFI"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="124dp"
            android:layout_height="23dp"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:rating="3.5"
            app:layout_constraintLeft_toLeftOf="@+id/OmrådeNavn"
            app:layout_constraintTop_toBottomOf="@+id/OmrådeNavn" />

        <TextView
            android:id="@+id/WIFI"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginTop="72dp"
            android:background="?android:attr/colorButtonNormal"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textPersonName"
            android:paddingLeft="45dp"
            android:paddingTop="25dp"
            android:text="WIFI"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/Power"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <TextView
            android:id="@+id/Power"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:background="?android:attr/colorButtonNormal"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textPersonName"
            android:paddingLeft="45dp"
            android:paddingTop="25dp"
            android:text="Power"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/WIFI"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/WIFI" />

        <TextView
            android:id="@+id/Group"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:background="?android:attr/colorButtonNormal"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textPersonName"
            android:paddingLeft="45dp"
            android:paddingTop="25dp"
            android:text="Group spaces"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/Coffee"
            app:layout_constraintLeft_toLeftOf="@+id/Power" />

        <TextView
            android:id="@+id/Coffee"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="?android:attr/colorButtonNormal"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textPersonName"
            android:paddingLeft="45dp"
            android:paddingTop="25dp"
            android:text="Coffee"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/WIFI"
            app:layout_constraintTop_toBottomOf="@+id/WIFI" />

        <ImageView
            android:id="@+id/WIFI_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_wifi_black_24px"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/WIFI"
            app:layout_constraintLeft_toLeftOf="@+id/WIFI"
            app:layout_constraintTop_toTopOf="@+id/WIFI"
            app:srcCompat="@drawable/ic_wifi_black_24px" />

        <ImageView
            android:id="@+id/coffee_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_local_cafe_black_24px"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/Coffee"
            app:layout_constraintLeft_toLeftOf="@+id/Coffee"
            app:layout_constraintTop_toTopOf="@+id/Coffee"
            app:srcCompat="@drawable/ic_local_cafe_black_24px" />

        <ImageView
            android:id="@+id/power_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_power_black_24px"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/Power"
            app:layout_constraintLeft_toLeftOf="@+id/Power"
            app:layout_constraintTop_toTopOf="@+id/Power"
            app:srcCompat="@drawable/ic_power_black_24px" />

        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_group_black_24px"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/Group"
            app:layout_constraintLeft_toLeftOf="@+id/Group"
            app:layout_constraintTop_toTopOf="@+id/Group"
            app:srcCompat="@drawable/ic_group_black_24px" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView2"
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="789dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:inputType="textPersonName"
            android:text="Test"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toBottomOf="@+id/Group"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mapView2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.508" />

        <TextView
            android:id="@+id/adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:text="AdresseStreng"
            app:layout_constraintLeft_toLeftOf="@+id/OmrådeNavn"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <TextView
            android:id="@+id/afstand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="10dp"
            android:text="afstand fra dig"
            app:layout_constraintLeft_toLeftOf="@+id/OmrådeNavn"
            app:layout_constraintTop_toBottomOf="@+id/adresse" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>